# Environment variables for Stalkeer
# Copy this file to .env and customize for your environment

# Application version
VERSION=dev
COMMIT=local
DATE=

# Database configuration
POSTGRES_DB=stalkeer
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Stalkeer database connection
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=stalkeer
DB_SSLMODE=disable

# API configuration
API_PORT=8080
ADMIN_PORT=8081
LOG_LEVEL=info

# TMDB API
TMDB_API_KEY=

# Radarr configuration
RADARR_URL=http://radarr:7878
RADARR_API_KEY=
RADARR_PORT=7878

# Sonarr configuration
SONARR_URL=http://sonarr:8989
SONARR_API_KEY=
SONARR_PORT=8989

# Optional services ports
PROWLARR_PORT=9696
QBITTORRENT_PORT=8082
WEB_PORT=8008

# User/Group IDs for file permissions
PUID=1000
PGID=1000
UID=1000
GID=1000
TZ=Etc/UTC

# Volume paths (optional overrides)
DOWNLOADS_DIR=./data/downloads
TEMP_DIR=./data/temp

# Docker registry (for building and pushing)
REGISTRY=docker.io/germainlefebvre4
